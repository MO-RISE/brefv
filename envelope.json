{
    "$schema":"https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Envelope",
    "description": "An envelope containing a message, the message type, and the timestamp when it was sent.",
    "examples": [
      {
        "sent_at": "2021-10-07T20:20:39.345+00:00",
        "message_type": "https://raw.githubusercontent.com/brefv/messages/sensor/gnss.json",
        "message": {
          "position": {
            "type": "Point",
            "coordinates": [
              11,
              56
            ]
          }
        }
      }
    ],
    "required": [
      "sent_at",
      "message_type",
      "message"
    ],
    "properties": {    
          "sent_at": {
            "type": "string",
            "format": "date-time",
            "title": "Payload timestamp",
            "description": "Date and time when the message was sent expressed according to the ISO 8601 standard.",
            "examples": [
              "2021-10-07T20:20:39.345+00:00"
            ]
          },
          "message_type": {
              "type": "string",
              "format": "uri",
              "title": "Message type",
              "description": "A reference to a json-schema defining the message type carried by this envelope.",
              "examples": [
                "https://raw.githubusercontent.com/brefv/messages/sensor/gnss.json"
              ]
          },
          "message": {
            "type": "object",
            "title": "Message",
            "description": "The message contained by this envelope.",
            "minProperties": 1
          }
    },
    "additionalProperties": false
}