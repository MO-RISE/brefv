{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Rate of turn",
    "description": "Reading from a rate of turn sensor",
    "required": [
        "observation_id",
        "rot"
    ],
    "properties": {
        "observation_id": {
            "type": "string",
            "title": "Observation id",
            "desciption": "Platform unique observation id"
        },
        "rot": {
            "type": "number",
            "title": "Rate of turn",
            "description": "Rate of turn [degrees/minute], positive to starboard"
        }
    }
}