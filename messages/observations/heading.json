{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Heading",
    "description": "Reading from a heading sensor",
    "required": [
        "observation_id",
        "heading",
        "type"
    ],
    "properties": {
        "observation_id": {
            "type": "string",
            "title": "Observation id",
            "desciption": "Platform unique observation id"
        },
        "heading": {
            "type": "number",
            "title": "Heading",
            "description": "Heading, relative to North [degrees]"
        },
        "type": {
            "type": "string",
            "title": "Type of sensor",
            "enum": [
                "Magnetic",
                "Gyro",
                "IMU",
                "True"
            ]
        }
    }
}