{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Ground velocity transverse",
    "description": "Reading from a sensor providing information about the transverse ground velocity",
    "required": [
        "observation_id",
        "sog"
    ],
    "properties": {
        "observation_id": {
            "type": "string",
            "title": "Observation id",
            "desciption": "Platform unique observation id"
        },
        "sog": {
            "type": "number",
            "title": "Speed over ground [knots]",
            "description": "Reported speed over ground."
        }
    }
}