{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Ground velocity",
    "description": "Reading from a sensor providing information about the ground velocity",
    "required": [
        "observation_id",
        "sog",
        "cog"
    ],
    "properties": {
        "observation_id": {
            "type": "string",
            "title": "Observation id",
            "desciption": "Platform unique observation id"
        },
        "sog": {
            "type": "number",
            "title": "Speed over ground [knots]",
            "description": "Reported speed over ground."
        },
        "sog_transverse": {
            "type": "number",
            "title": "Speed over ground transverse [knots]",
            "description": "Reported speed over ground transverse."
        },
        "sog_longships": {
            "type": "number",
            "title": "Speed over ground longships [knots]",
            "description": "Reported speed over ground longships."
        },
        "cog": {
            "type": "number",
            "title": "Course over ground",
            "description": "Reported course over ground [degrees] relative True North"
        }
    }
}