{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Platform description",
    "description": "A description of a platform including metadata of the platform itself, available sensors and produced observations",
    "required": [
        "platform_id",
        "sensors"
    ],
    "properties": {
        "platform_id": {
            "type": "string",
            "title": "Platform id",
            "description": "Id of the platform"
        },
        "platform_type": {
            "type": "string",
            "title": "Platform type",
            "enum": [
                "vessel",
                "land-sensor-station",
                "remote-control-center"
            ],
            "description": "Id of the platform"
        },
        "metadata": {
            "type": "object",
            "title": "Metadata",
            "description": "Metadata of this platform"
        },
        "sensors": {
            "type": "array",
            "title": "Sensors",
            "description": "List of sensors associated with this platform",
            "items": {
                "$ref": "../descriptions/sensor.json"
            }
        },
        "actuators": {
            "type": "array",
            "title": "Actuators",
            "description": "List of actuators associated with this platform",
            "items": {
                "$ref": "../descriptions/actuator.json"
            }
        }
    }
}