{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Actuator description",
    "description": "A description of a actuator for a given physical/digital unit",
    "required": [
        "sensor_id",
        "commands"
    ],
    "properties": {
        "actuator_id": {
            "type": "string",
            "title": "Actuator id",
            "description": "Id of the actuator"
        },
        "metadata": {
            "type": "object",
            "title": "Metadata",
            "description": "Metadata of this actuator"
        },
        "commands": {
            "type": "array",
            "title": "Commands",
            "description": "List of commands accepted by this actuator",
            "items": {
                "$ref": "../descriptions/command.json"
            }
        }
    }
}